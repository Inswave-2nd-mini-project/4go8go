<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.ImageMapper">
    <resultMap id="imageResultMap" type="com.example.demo.domain.post.model.Image">
        <id property="imageId" column="image_id" />
        <result property="postId" column="post_id" />
        <result property="url" column="url" />
    </resultMap>

    <!--이미지 삽입-->
    <insert id="insertImage" parameterType="com.example.demo.domain.post.model.Image">
        insert into image
        (
        image_id,
        url,
        post_id
        )
        values
        (
        image_seq.NEXTVAL,
        #{url},
        #{postId}
        )
    </insert>

    <!--게시물 ID로 이미지 목록 조회-->
    <select id="getImagesByPostId" resultType="com.example.demo.domain.post.model.Image">
        SELECT *
        FROM image
        WHERE post_id = #{postId}
    </select>
</mapper>